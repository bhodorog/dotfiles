function _add_2_path {
    [[ -d $1 ]] && export PATH=$PATH:$1
}

_add_2_path /usr/local/opt/ruby/bin
_add_2_path /usr/local/sbin
_add_2_path ~/Bin
_add_2_path /usr/local/Cellar/smlnj/110.75/libexec/bin
